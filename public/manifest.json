{
   "name": "Chrome React SEO Extension",
   "description": "The power of React and TypeScript for building interactive Chrome extensions",
   "version": "0.0.1",
   "manifest_version": 3,
   "background": {
    "service_worker": "background.js"
   },
   "action": {
       "default_popup": "popup.html",
       "default_title": "Open the popup"
   },
   "permissions": [
    "tabGroups",
    "tabs",
    "storage",
    "activeTab"
   ],
   "host_permissions": [
        "http://*/*",
        "https://*/*"
  ],
  "content_scripts": [
   {
       "matches": ["http://*/*", "https://*/*"],
       "js": ["content.js"]
   }
  ]
}